@model OrderItemModel
<div class="form-group row mb-1">
    <input type="hidden" asp-for="UniqueId" />
    <label asp-for="ProductId" class="col-form-label col-2"></label>
    <div class="col-2">
        <input type="text" asp-for="ProductId" class="form-control" list="prods" value="@Model.ProductName" />
        <span asp-validation-for="ProductId" class="text-danger small"></span>

    </div>

    <label asp-for="Quantity" class="col-form-label col-1"></label>
    <div class="col-2">

        <input type="text" asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger small"></span>
    </div>

    <label asp-for="UnitPrice" class="col-form-label col-1"></label>
    <div class="col-2">
        <input type="text" asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger small"></span>
    </div>
    <div class="col-2">
        <button type="button" class="btn btn-success btn-sm update" formnovalidate>Update</button>
        <button type="button" class="btn btn-secondary btn-sm update-cancel" formnovalidate>Cancel</button>
    </div>
</div>


